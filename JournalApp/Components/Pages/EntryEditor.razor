@page "/entry/new"
@page "/entry/{EntryId:int}"
@using JournalApp.Services
@using JournalApp.Models
@inject JournalService JournalService
@inject TagService TagService
@inject NavigationManager Navigation

<div class="entry-editor">
    <div class="editor-header">
        <h1>@(isNewEntry ? "New Entry" : "Edit Entry")</h1>
        <p class="entry-date">@entryDate.ToString("dddd, MMMM dd, yyyy")</p>
    </div>

    @if (errorMessage != null)
    {
        <div class="error-message">@errorMessage</div>
    }

    <div class="editor-form">
        <div class="form-group">
            <label>Title (Optional)</label>
            <input type="text" @bind="title" class="form-control" placeholder="Entry title..." />
        </div>

        <div class="form-group">
            <label>Primary Mood *</label>
            <div class="mood-selector">
                @foreach (var moodCategory in Enum.GetValues<MoodCategory>())
                {
                    <div class="mood-category">
                        <h4>@moodCategory</h4>
                        <div class="mood-buttons">
                            @foreach (var mood in Mood.AllMoods.Where(m => m.Category == moodCategory))
                            {
                                <button type="button"
                                        class="mood-btn @(primaryMood == mood.Name ? "selected" : "")"
                                        @onclick="() => primaryMood = mood.Name">
                                    @mood.Icon @mood.Name
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <label>Secondary Moods (Optional - up to 2)</label>
            <div class="mood-buttons">
                @foreach (var mood in Mood.AllMoods)
                {
                    <button type="button"
                            class="mood-btn small @(IsSecondaryMoodSelected(mood.Name) ? "selected" : "")"
                            @onclick="() => ToggleSecondaryMood(mood.Name)"
                            disabled="@(secondaryMoods.Count >= 2 && !secondaryMoods.Contains(mood.Name))">
                        @mood.Icon @mood.Name
                    </button>
                }
            </div>
        </div>

        <div class="form-group">
            <label>Category (Optional)</label>
            <input type="text" @bind="category" class="form-control" placeholder="e.g., Personal, Work, Travel..." />
        </div>

        <div class="form-group">
            <label>Tags</label>
            <div class="tag-selector">
                @foreach (var tag in availableTags)
                {
                    <button type="button"
                            class="tag-btn @(selectedTags.Contains(tag.Name) ? "selected" : "")"
                            @onclick="() => ToggleTag(tag.Name)">
                        @tag.Name
                    </button>
                }
            </div>
            <div class="custom-tag-input">
                <input type="text" @bind="newTagName" class="form-control" placeholder="Add custom tag..." />
                <button type="button" @onclick="AddCustomTag" class="btn-secondary">Add Tag</button>
            </div>
        </div>

        <div class="form-group">
            <label>Content *</label>
            <textarea @bind="content" class="form-control content-editor" rows="15"
                      placeholder="Write your thoughts... (Markdown supported)"></textarea>
            <small>Word count: @wordCount</small>
        </div>

        <div class="editor-actions">
            <button class="btn-primary" @onclick="SaveEntry" disabled="@(!CanSave)">
                @(isNewEntry ? "Create Entry" : "Save Changes")
            </button>
            @if (!isNewEntry)
            {
                <button class="btn-danger" @onclick="DeleteEntry">Delete Entry</button>
            }
            <button class="btn-secondary" @onclick="Cancel">Cancel</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? EntryId { get; set; }

    private bool isNewEntry = true;
    private DateTime entryDate = DateTime.Today;
    private string? title;
    private string content = string.Empty;
    private string primaryMood = string.Empty;
    private List<string> secondaryMoods = new();
    private string? category;
    private List<Tag> availableTags = new();
    private HashSet<string> selectedTags = new();
    private string newTagName = string.Empty;
    private string? errorMessage;

    private int wordCount => string.IsNullOrWhiteSpace(content) ? 0 :
        content.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;

    private bool CanSave => !string.IsNullOrWhiteSpace(content) && !string.IsNullOrWhiteSpace(primaryMood);

    protected override async Task OnInitializedAsync()
    {
        availableTags = await TagService.GetAllTagsAsync();

        if (EntryId.HasValue)
        {
            isNewEntry = false;
            var entry = await JournalService.GetEntryByDateAsync(entryDate);
            if (entry != null)
            {
                LoadEntry(entry);
            }
        }
    }

    private void LoadEntry(JournalEntry entry)
    {
        entryDate = entry.Date;
        title = entry.Title;
        content = entry.Content;
        primaryMood = entry.PrimaryMood;

        if (!string.IsNullOrEmpty(entry.SecondaryMood1))
            secondaryMoods.Add(entry.SecondaryMood1);
        if (!string.IsNullOrEmpty(entry.SecondaryMood2))
            secondaryMoods.Add(entry.SecondaryMood2);

        category = entry.Category;
        selectedTags = entry.Tags.Select(t => t.Name).ToHashSet();
    }

    private bool IsSecondaryMoodSelected(string moodName)
    {
        return secondaryMoods.Contains(moodName);
    }

    private void ToggleSecondaryMood(string moodName)
    {
        if (secondaryMoods.Contains(moodName))
        {
            secondaryMoods.Remove(moodName);
        }
        else if (secondaryMoods.Count < 2)
        {
            secondaryMoods.Add(moodName);
        }
    }

    private void ToggleTag(string tagName)
    {
        if (selectedTags.Contains(tagName))
        {
            selectedTags.Remove(tagName);
        }
        else
        {
            selectedTags.Add(tagName);
        }
    }

    private async Task AddCustomTag()
    {
        if (string.IsNullOrWhiteSpace(newTagName))
            return;

        var tag = await TagService.CreateCustomTagAsync(newTagName.Trim());
        if (!availableTags.Any(t => t.Name == tag.Name))
        {
            availableTags.Add(tag);
        }
        selectedTags.Add(tag.Name);
        newTagName = string.Empty;
    }

    private async Task SaveEntry()
    {
        try
        {
            var tags = availableTags.Where(t => selectedTags.Contains(t.Name)).ToList();

            if (isNewEntry)
            {
                var entry = new JournalEntry
                {
                    Date = entryDate,
                    Title = title,
                    Content = content,
                    PrimaryMood = primaryMood,
                    SecondaryMood1 = secondaryMoods.ElementAtOrDefault(0),
                    SecondaryMood2 = secondaryMoods.ElementAtOrDefault(1),
                    Category = category,
                    Tags = tags
                };

                await JournalService.CreateEntryAsync(entry);
            }
            else
            {
                var entry = await JournalService.GetEntryByDateAsync(entryDate);
                if (entry != null)
                {
                    entry.Title = title;
                    entry.Content = content;
                    entry.PrimaryMood = primaryMood;
                    entry.SecondaryMood1 = secondaryMoods.ElementAtOrDefault(0);
                    entry.SecondaryMood2 = secondaryMoods.ElementAtOrDefault(1);
                    entry.Category = category;
                    entry.Tags = tags;

                    await JournalService.UpdateEntryAsync(entry);
                }
            }

            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving entry: {ex.Message}";
        }
    }

    private async Task DeleteEntry()
    {
        if (EntryId.HasValue && confirm("Are you sure you want to delete this entry?"))
        {
            await JournalService.DeleteEntryAsync(EntryId.Value);
            Navigation.NavigateTo("/");
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/");
    }

    private bool confirm(string message)
    {
        return true;
    }
}
